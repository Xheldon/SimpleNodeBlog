<%include ./public/head%>
<%include ./public/header%>
<div class="container-fluid">
    <div class="login-screen">
        <div class="login-form">
            <div class="form-group">
                <input type="text" class="form-control login-field j_username" value="" placeholder="Enter your name" id="register-name">
                <label class="login-field-icon fui-user" for="register-name"></label>
            </div>
            <div class="form-group">
                <input type="text" class="form-control login-field j_email" value="" placeholder="Enter your email" id="register-email">
                <label class="login-field-icon fui-user" for="register-email"></label>
            </div>
            <div class="form-group">
                <input type="password" class="form-control login-field j_password" value="" placeholder="Password" id="register-pass">
                <label class="login-field-icon fui-lock" for="register-pass"></label>
            </div>
            <a class="btn btn-primary btn-lg btn-block j_register" href="#">马上注册！</a>
            <a class="login-link" href="#">忘记密码？没办法，只能联系我吧=_=</a>
        </div>
    </div>
</div>

<script src="/js/register.js"></script>
<%include ./public/foot%>
