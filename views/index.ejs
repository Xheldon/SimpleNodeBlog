<%include ./public/head%>
<%include ./public/header%>
<div class="container">
    <div class="row">
        <div class="col-xs-9">
            <%for(var i=0,length = data.length;i<length;i++){%>
            <article>
                <div class="h6">
                    <button class="btn btn-primary btn-xs"><%= data[i]['postTags']%></button>
                    <a href="/post/<%=data[i]['_id']%>.html"><%= data[i]['postTitle']%></a>
                </div>
                <span class="small"><kbd><%=data[i]['postCreateAt']%></kbd></span>
                <div class="content">
                    <%= data[i]['postShortContent']%>
                </div>
            </article>
            <hr>
            <%}%>
        </div>
        <%include ./public/side%>
    </div>
    <div>
        <ul class="pagination">
            <%- pagination%>
        </ul>
    </div>
</div>



<script src="/js/index.js"></script>
<%include ./public/foot%>
